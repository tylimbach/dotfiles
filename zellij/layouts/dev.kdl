// dev.kdl - Standard development layout
// Tabs: code, agent, term
// Uses compact bar (combined tab/status) at bottom

layout {
    default_tab_template {
        children
        pane size=1 borderless=true {
            plugin location="compact-bar"
        }
    }

    tab name="code" focus=true {
        pane
    }

    tab name="agent" {
        pane
    }

    tab name="term" {
        pane
    }
}
