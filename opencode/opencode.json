{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "model": "github-copilot/claude-opus-4.5",
  "small_model": "github-copilot/gpt-5-mini",
  "instructions": ["*/AGENTS.md"],
  "share": "disabled",
  "disabled_providers": [
    "openai",
    "anthropic",
    "google",
    "google-vertex",
    "gemini",
    "openrouter",
    "mistral",
    "groq",
    "xai",
    "llama",
    "nvidia",
    "deepseek",
    "lmstudio",
    "cortecs",
    "amazon-bedrock",
    "azure",
    "opencode"
  ],
  "provider": {
    "github-copilot": {}
  },
  "permission": {
    "edit": "ask",
    "bash": {
      "*": "ask",
      "rg": "allow",
      "pwd": "allow",
      "ls": "allow",
      "stat": "allow",
      "cat": "allow",
      "git diff": "allow",
      "git status": "allow",
      "git log": "allow",
      "git show": "allow",
      "grep": "allow",
      "cd": "allow",
      "head": "allow",
      "tail": "allow",
      "wc": "allow",
      "dir": "allow",
      "find": "allow",
      "findstr": "allow",
      "less": "allow",
      "more": "allow",
      "echo": "allow",
      "hostname": "allow"
    }
  }
}
